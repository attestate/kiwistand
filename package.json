{
  "name": "goblin",
  "version": "0.0.1",
  "description": "goblin is the p2p node client for goblin.exchange, a web3 writer friendly Hacker News that nobody controls but everybody co-owns",
  "main": "./src/index.mjs",
  "scripts": {
    "build": "cd src/web && NODE_ENV=production npm run build",
    "test": "ava --timeout=30s --serial --verbose",
    "connect": "ssh root@91.107.210.214",
    "deploy": "npm run build && npm run rsync",
    "rsync": "rsync -avz . root@91.107.210.214:./kiwistand --exclude=anon --exclude \"node_modules\" --exclude=\".git\" --exclude=bootstrap --exclude=data",
    "dev": "DEBUG=\"*attestate*\" concurrently \"npm run watch:web\" \"npm run start\"",
    "start": "node -r dotenv/config --no-warnings ./src/launch.mjs",
    "watch": "HTTP_PORT=3000 nodemon --watch src/views --exec 'npm run dev:anon'",
    "watch:web": "cd src/web && node vite-watch.mjs",
    "dev:bootstrap": "THEME_COLOR=limegreen THEME_EMOJI=ðŸ¥ THEME_NAME=\"Kiwi News\" HTTP_PORT=80 DATA_DIR=bootstrap BIND_ADDRESS_V4=\"127.0.0.1\" IS_BOOTSTRAP_NODE=true USE_EPHEMERAL_ID=false npm run dev",
    "dev:anon": "THEME_COLOR=orange THEME_EMOJI=ðŸŠ THEME_NAME=\"Orange News\" HTTP_PORT=4000 DATA_DIR=anon BIND_ADDRESS_V4=\"0.0.0.0\" PORT=0 IS_BOOTSTRAP_NODE=false USE_EPHEMERAL_ID=true npm run dev"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/rugpullindex/rugpulld.git"
  },
  "keywords": [
    "rugpull",
    "data",
    "tokens",
    "layer2",
    "blockchain",
    "ethereum",
    "p2p"
  ],
  "engines": {
    "node": ">=16"
  },
  "author": "The Goblin Exchange Developers",
  "license": "GPL-3.0-only",
  "bugs": {
    "url": "https://github.com/attestate/golbin/issues"
  },
  "homepage": "https://github.com/attestate/goblin#readme",
  "dependencies": {
    "@attestate/crawler": "0.5.1",
    "@attestate/crawler-call-block-logs": "0.3.0",
    "@chainsafe/libp2p-gossipsub": "5.2.1",
    "@chainsafe/libp2p-noise": "10.2.0",
    "@ethereumjs/rlp": "4.0.1",
    "@ethereumjs/trie": "5.0.4",
    "@libp2p/bootstrap": "5.0.0",
    "@libp2p/mplex": "7.1.0",
    "@libp2p/peer-id": "1.1.16",
    "@libp2p/pubsub-peer-discovery": "8.0.0",
    "@libp2p/tcp": "6.0.4",
    "ajv": "8.12.0",
    "ajv-formats": "2.1.1",
    "cbor-x": "1.5.1",
    "debug": "4.3.4",
    "dotenv": "16.0.3",
    "eth-fun": "0.9.2",
    "ethereum-cryptography": "1.1.2",
    "ethers": "5.2.0",
    "express": "4.18.2",
    "htm": "3.1.1",
    "it-all": "2.0.0",
    "it-length-prefixed": "8.0.4",
    "it-map": "2.0.0",
    "libp2p": "0.40.0",
    "lmdb": "2.7.9",
    "nodemon": "2.0.21",
    "pm2": "5.3.0",
    "vhtml": "2.2.0"
  },
  "devDependencies": {
    "ava": "3.15.0",
    "chokidar": "3.5.3",
    "concurrently": "8.0.1",
    "terser": "5.17.1",
    "vite": "4.3.1"
  },
  "ava": {
    "files": [
      "**/*_test.mjs"
    ],
    "environmentArguments": {
      "DEBUG": "attestate*"
    },
    "nodeArguments": [
      "--no-warnings"
    ],
    "require": [
      "dotenv/config"
    ]
  }
}
